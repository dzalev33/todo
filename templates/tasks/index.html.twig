{% extends 'base.html.twig' %}
{% block title %}Simple TODO List{% endblock %}
{% block body %}
    {% if tasks %}
   <table id="tasks" class="table table-striped">
<thead>
<tr>
    <th>Task Title</th>
    <th>Actions</th>
</tr>
</thead>
       <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.title }}</td>
                    <td>
                        <a href="/task/{{ task.id }}" class="btn btn-dark">Show</a>
                        <a href="/task/edit/{{ task.id }}" class="btn btn-light">Edit</a>
                        <a href="#" class="btn btn-danger delete-task" data-id="{{ task.id }}">Delete</a>                    </td>
                </tr>
            {% endfor %}
       </tbody>
   </table>
        {% else %}
<p>no tasks available</p>
    {% endif %}
{% endblock %}
{% block javascripts %}
    <script src="js/main.js"></script>
{% endblock %}